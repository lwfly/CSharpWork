<span style="color: #008080;">24</span> 
<span style="color: #008080;">25</span>     <span style="color: #0000ff;">switch</span>(<span style="color: #800080;">$action</span><span style="color: #000000;">)
</span><span style="color: #008080;">26</span> <span style="color: #000000;">    {
</span><span style="color: #008080;">27</span>         <span style="color: #0000ff;">case</span> 'test':
<span style="color: #008080;">28</span>             <span style="color: #0000ff;">echo</span> <span style="color: #800080;">$_userid</span><span style="color: #000000;">;
